@{
    ViewData["Title"] = "Register";
}
<h2>Register</h2>
@if(ViewBag.Error != null) { <div class="alert alert-danger">@ViewBag.Error</div> }
<form method="post" asp-action="Register">
    <div class="mb-3"><label>Username</label><input class="form-control" name="username" /></div>
    <div class="mb-3"><label>Email</label><input class="form-control" name="email" /></div>
    <div class="mb-3"><label>Password</label><input class="form-control" type="password" name="password" /></div>
    <button class="btn btn-primary" type="submit">Register</button>
</form>
