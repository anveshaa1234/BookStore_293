@model BookStore_293.Models.Store

<h2 style="text-align:center; font-family:'Georgia', serif; color:#FAF3E0; background-color:#4E342E; padding:20px 0; border-radius:10px;">
    Store Details
</h2>

<div style="
    max-width:900px;
    background:#4E342E; /* updated brown */
    margin:auto;
    padding:35px 25px;
    border-radius:15px;
    box-shadow:0 8px 25px rgba(0,0,0,0.15);
    font-family:'Georgia', serif;
    color:#FAF3E0;
">
    <p style="font-size:16px; margin:12px 0;"><strong>Name:</strong> @Model.Name</p>
    <p style="font-size:16px; margin:12px 0;"><strong>Address:</strong> @Model.Address</p>
    <p style="font-size:16px; margin:12px 0;"><strong>Phone:</strong> @Model.Phone</p>
    <p style="font-size:16px; margin:12px 0;"><strong>Email:</strong> @Model.Email</p>
    <p style="font-size:16px; margin:12px 0;"><strong>Hours:</strong> @Model.Hours</p>
    <p style="font-size:16px; margin:12px 0;"><strong>Established:</strong> @Model.Established</p>
    <p style="font-size:16px; margin:12px 0;"><strong>Specialty:</strong> @Model.Preference</p>
</div>

<style>
    body {
        background-color:#FAF3E0;
        margin:0;
        padding:0;
    }
</style>
