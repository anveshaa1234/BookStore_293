@model List<BookStore_293.Models.Book>

<h2 style="text-align:center; font-family: 'Georgia', serif; color:#5D4037; margin-bottom:30px;">Books Collection</h2>
<form method="get" action="/Books" style="text-align:center; margin:30px 0;">
    <input type="text" name="searchTerm" placeholder="Search by title or author..." 
        style="
            padding:10px 15px; 
            border-radius:8px; 
            border:1px solid #4E342E; 
            width:250px;
            font-family:'Georgia', serif;
        ">
    <button type="submit" 
        style="
            padding:10px 15px; 
            border-radius:8px; 
            background:#5D4037; 
            color:white; 
            border:none;
            font-family:'Georgia', serif;
        ">Search</button>
</form>

<div style="display:flex; flex-wrap:wrap; gap:20px; justify-content:center;">
@foreach(var book in Model)
{
    <div style="width:220px; background:white; padding:15px; border-radius:10px; box-shadow: 0 8px 18px rgba(0,0,0,0.08);">
        <div style="text-align:center;">
            <img src="@book.ImageUrl" alt="@book.Title" style="width:130px; height:180px; object-fit:cover; border-radius:6px;" />
        </div>
        <h5 style="font-family:'Georgia', serif; color:#3E2723; margin-top:10px;">@book.Title</h5>
        <p style="margin:0; color:#6D4C41; font-size:0.9rem;">by @book.Author</p>
        <p style="font-weight:700; margin-top:8px;">@book.Price.ToString("C")</p>

        <!-- Add to Cart button/form -->
        <form method="post" asp-controller="Cart" asp-action="Add" style="margin-top:10px;">
            <input type="hidden" name="bookId" value="@book.Id" />
            <input type="hidden" name="title" value="@book.Title" />
            <input type="hidden" name="price" value="@book.Price" />
            <button type="submit" class="btn btn-sm" style="background:#5D4037; color:white; border-radius:6px;">Add to Cart</button>
        </form>
    </div>
}
</div>

